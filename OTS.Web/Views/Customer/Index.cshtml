@model IEnumerable<OTS.Web.Models.CustomerModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="menucontainer">
    <ul id="menu">
        <li>@Html.ActionLink("Create Customer", "Create", "Customer")</li>
    </ul>
</div>
<table>
    <tr>
    </tr>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Email
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>
                @customer.Id
            </td>
            <td>@customer.FirstName + " " + @customer.LastName
            </td>
            <td>@customer.Address
            </td>
            <td>@customer.Phone
            </td>
            <td>@customer.Email
            </td>
            <td>
                @Html.ActionLink("Edit Customer", "Edit", "Customer", new { id = @customer.Id }, null)
                @Html.ActionLink("Delete Customer", "Delete", "Customer", new { id = @customer.Id }, null)
            </td>
        </tr>
    }
</table>
